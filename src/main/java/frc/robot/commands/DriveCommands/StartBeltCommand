package frc.robot.commands.DriveCommands;

import edu.wpi.first.wpilibj2.command.Command;

import frc.robot.subsystems.DriveSubsystem;
import frc.robot.subsystems.BeltSubsystem;

public class StartBeltCommand extends Command {
     private final BeltSubsystem beltSubsystem;

    public StartBeltCommand(BeltSubsystem beltSubsystem) {
        this.beltSubsystem = beltSubsystem;
        addRequirements(beltSubsystem);  // Declare subsystem dependencies
    }

    @Override
    public void initialize() {
        setBeltSpeed(0.5);  // ...or whatever speed you want
        beltSubsystem.beltStart();  // Start the belt at the current motor speed
    }

    @Override
    public boolean isFinished() {
        return false;  // This could run until manually stopped or interrupted
    }
}
